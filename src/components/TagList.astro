---
interface Props {
  tags: string[];
  className?: string;
}

const { tags, className = '' } = Astro.props;
---

<div class:list={['tags', className]}>
  {tags.map(tag => (
    <span class="tag">{tag}</span>
  ))}
</div>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-block;
    background: #e2e8f0;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.875rem;
    color: #4a5568;
  }
</style>