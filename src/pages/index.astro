---
import Layout from '../layouts/Layout.astro';
import ColorsheetCard from '../components/ColorsheetCard.astro';
import FeaturedColorsheet from '../components/FeaturedColorsheet.astro';
import { colorsheets } from '../data/colorsheets';

const featuredSheet = colorsheets.find(sheet => sheet.featured);
const regularSheets = colorsheets.filter(sheet => !sheet.featured);
---

<Layout 
  title="Beautiful Printable Coloring Pages"
  description="Download high-quality printable coloring pages. Find relaxing mandalas, cute animals, and more designs perfect for all ages."
>
  <h1>Beautiful Coloring Pages for Everyone</h1>
  <p class="intro">
    Discover our collection of printable coloring pages. Each design is carefully crafted
    to provide hours of creative relaxation.
  </p>

  {featuredSheet && <FeaturedColorsheet colorsheet={featuredSheet} />}

  <div class="colorsheets-grid">
    {regularSheets.map(sheet => (
      <ColorsheetCard colorsheet={sheet} />
    ))}
  </div>
</Layout>

<style>
  h1 {
    font-size: 2.5rem;
    color: var(--text);
    text-align: center;
    margin-bottom: 1rem;
    text-shadow: 0 0 20px rgba(139, 92, 246, 0.5);
  }

  .intro {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
    color: var(--text-muted);
    font-size: 1.125rem;
  }

  .colorsheets-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
</style>