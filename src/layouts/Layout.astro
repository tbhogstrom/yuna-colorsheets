---
import { categories } from '../data/categories';
import ParallaxStars from '../components/ParallaxStars.astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const menuItems = [
  { href: '/categories/star-wars-christmas', title: 'Star Wars Christmas Coloring Pages' },
  { href: '/categories/other', title: 'Other Coloring Pages' },
  { href: '/about', title: 'About' }
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Yuna Colorsheets</title>
  </head>
  <body>
    <ParallaxStars />
    <header>
      <nav>
        <a href="/" class="logo">Yuna Colorsheets</a>
        <div class="nav-links">
          {menuItems.map(item => (
            <a href={item.href}>{item.title}</a>
          ))}
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Yuna Colorsheets. All rights reserved.</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --primary: #8b5cf6;
    --primary-dark: #7c3aed;
    --background: #0f172a;
    --card-bg: #1e293b;
    --text: #e2e8f0;
    --text-muted: #94a3b8;
    --border: #334155;
  }
  
  html {
    font-family: system-ui, sans-serif;
    background: var(--background);
    color: var(--text);
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    background: var(--card-bg);
    border-bottom: 1px solid var(--border);
    backdrop-filter: blur(12px);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--primary);
    text-decoration: none;
    text-shadow: 0 0 10px rgba(139, 92, 246, 0.5);
  }

  .nav-links a {
    color: var(--text);
    text-decoration: none;
    margin-left: 2rem;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--primary);
  }

  main {
    flex: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
    width: 100%;
    box-sizing: border-box;
    position: relative;
    z-index: 1;
  }

  footer {
    background: var(--card-bg);
    border-top: 1px solid var(--border);
    padding: 2rem;
    text-align: center;
    color: var(--text-muted);
    backdrop-filter: blur(12px);
    position: relative;
    z-index: 1;
  }

  /* Global card styles */
  .colorsheet-card,
  .featured-colorsheet {
    background: var(--card-bg) !important;
    border: 1px solid var(--border);
    backdrop-filter: blur(12px);
  }

  .colorsheet-card h2,
  .featured-colorsheet h2 {
    color: var(--text) !important;
  }

  .colorsheet-card p,
  .featured-colorsheet p {
    color: var(--text-muted) !important;
  }

  .tag {
    background: var(--background) !important;
    color: var(--text-muted) !important;
    border: 1px solid var(--border);
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: var(--background);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--border);
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--primary);
  }
</style>